import { getCollection, render } from "astro:content";
import BlogLayout from "../../layouts/BlogLayout.astro";

export const prerender = true;

export async function getStaticPaths() {
  const projects = await getCollection("blog");
  return projects.map((entry) => ({
    params: { slug: entry.id }, // O 'entry.slug' dependiendo de tu versi√≥n de Astro
    props: { entry },
  }));
}

// Get the slug from params and fetch the entry
const { slug } = Astro.params;

// Handle the slug (could be "welcome-post" or "guides/markdown-guide")
const { entry } = Astro.props;
// const entry = await getEntry("blog", slug as string);

// If entry doesn't exist, return 404
if (!entry) {
  return Astro.redirect("/404");
}

const { Content } = await render(entry);
---

<BlogLayout
  title={entry.data.title}
  description={entry.data.description}
  publishDate={entry.data.publishDate}
  updatedDate={entry.data.updatedDate}
  image={entry.data.image}
  tags={entry.data.tags}
>
  <Content />
</BlogLayout>
